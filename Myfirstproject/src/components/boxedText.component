<apex:component >
    <apex:attribute name="text" description="The content of the box,"
          type="string" required="true"/>
    <apex:attribute name="borderwidth" description="The width of the border"
          type="integer" required="true" />
          
    <div style="border-color:red; border-style:solid; border-width:{! borderwidth}px">
    <apex:outputText value="{! text}"/>        
    </div>   
</apex:component>